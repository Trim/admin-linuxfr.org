export RAILS_ENV=production
export GEM_HOME="$HOME/gem"
export PATH="$GEM_HOME/bin:$PATH"
export NOKOGIRI_USE_SYSTEM_LIBRARIES=true
alias maintenance='echo "En maintenance" > ~/$RAILS_ENV/current/public/system/maintenance.html'
alias no_maintenance='rm ~/$RAILS_ENV/current/public/system/maintenance.html'
alias sc='bundle exec rails console'
